<!doctype html>
<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  {#  Include system scripts, page meta, and header code injection  }
  {squarespace-headers}

</head>

<body id="{squarespace.page-id}" class="{squarespace.page-classes}">

  <div class="site-container">

    {#  Navbar  }
    <header>
      {@|apply menu.block}
      {@|apply navbar.block}
    </header>

    <main role="main" data-content-field="main-content">

      {#  Hero image  }
      <div class="hero__image">
        <div class="util__z-above-overlay text-container ">
          <squarespace:block-field id="projects__hero-title" class="page__title util__text-white util__text-uppercase" columns="12" lock-layout="true"/>
          <squarespace:block-field id="projects__hero-header" class="util__text-red" columns="12" lock-layout="true"/>
          <squarespace:block-field id="projects__hero-description" class="util__text-white" columns="12" lock-layout="true"/>
        </div>
        <img src="/assets/images/hero__work.jpg">
        <div class="util__overlay-blue"></div>
      </div>

      {.section collection}

      <div class="index-list clearfix projects" data-controller="IndexController" data-collection-id="{collection.id}">

        {.repeated section collections}

          <a class="projects__tile util__mt-5 scroll-reveal" href="{fullUrl}" data-item-id="{item.id}">
            <img src="{mainImage.assetUrl}" alt="{navigationTitle}" />
            <div class="projects__tile-text">
              <h3><strong data-content-field="title">{navigationTitle}</strong> &mdash; {description}</h3>
              <span>View Project</span>
            </div>
          </a>

        {.end}
      </div>
      {.end}
    </main>

    {#  Footer  }
    <footer>
      {@|apply footer.block}
    </footer>

  </div>

  {#  Combo and minify scripts when not logged in  }
  <squarespace:script src="lib/headroom.min.js" combo="true" />
  <squarespace:script src="lib/scrollreveal.min.js" combo="true" />
  <squarespace:script src="globalScripts.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

  {#  Other Squarespace scripts, and footer code injection  }
  {squarespace-footers}

</body>
</html>
