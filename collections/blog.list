{#  Hero image  }
<div class="hero__image">
  <div class="util__z-above-overlay text-container ">
    <squarespace:block-field id="blog__hero-title" class="page__title util__text-white util__text-uppercase" columns="12" lock-layout="true"/>
    <squarespace:block-field id="blog__hero-header" class="util__text-red" columns="12" lock-layout="true"/>
    <squarespace:block-field id="blog__hero-description" class="util__text-white" columns="12" lock-layout="true"/>
  </div>
  <img src="/assets/images/hero__blog.jpg">
  <div class="util__overlay-blue"></div>
</div>

<div class="index-list clearfix blog" data-controller="IndexController" data-collection-id="{collection.id}">
  {.repeated section items}
  
    <a id="post-{id}" class="blog__tile util__mt-5 scroll-reveal" href="{fullUrl}" data-item-id="{id}">
      <div class="blog__tile-image">
        {.main-image?}
          <img {@|image-meta} />
        {.end}
      </div>
      <p class="blog__category util__text-red util__text-uppercase">{categories.0}</p>
      <h3 data-content-field="title">{title}</h3>
      {excerpt}
    </a>
  
  {.or}
  
    {#  No items means no blog posts  }
    <p><em>No blog posts yet.</em></p>
  
  {.end}

  {#  Pagination  }
  {.if pagination}
  <nav class="pagination">
    <div>
      {.if pagination.prevPage}
      <a class="pagination__container" href="{pagination.prevPageUrl}">
        <div class="scroll-reveal">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17.16 31.41" class="pagination__left-arrow">
            <title>Left Arrow</title>
            <path fill="#000" d="M17.16 1.46L15.71 0 0 15.71l15.71 15.7 1.45-1.45L2.91 15.71 17.16 1.46z" class="arrow"></path>
          </svg>
        </div>
        <div class="pagination__text scroll-reveal">Newer</div>
      </a>
      {.end}
    </div>
    <div>
      {.if pagination.nextPage}
      <a style="justify-content:flex-end;" class="pagination__container scroll-reveal" href="{pagination.nextPageUrl}">
        <div class="pagination__text scroll-reveal">Older</div>
        <div class="scroll-reveal">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17.16 31.41" class="pagination__right-arrow">
            <title>Right Arrow</title>
            <path fill="#000" d="M1.46 0L0 1.46l14.25 14.25L0 29.96l1.46 1.45 15.7-15.7L1.46 0z" class="arrow"></path>
          </svg>
        </div>
      </a>
      {.end}
    </div>
  </nav>
  {.end}
</div>