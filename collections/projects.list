<div class="index-list clearfix projects" data-controller="IndexController" data-collection-id="{collection.id}">
  {.repeated section items}
  
    <a id="post-{id}" class="scroll-reveal" href="{fullUrl}" data-item-id="{id}">
      <div>
        {.main-image?}
          <img {@|image-meta} />
        {.end}
      </div>
      <h3 class="util__text-red" data-content-field="title">{title}</h3>
    </a>
  
  {.or}
  
    {#  No items means no blog posts  }
    <p><em>No projects yet.</em></p>
  
  {.end}
</div>