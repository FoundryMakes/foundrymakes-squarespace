{.repeated section items}
  
  <a id="post-{id}" class="blog__tile util__mt-5 scroll-reveal" href="{fullUrl}" data-item-id="{id}">
    <div class="blog__tile-image">
      {.main-image?}
        <img {@|image-meta} />
      {.end}
    </div>
    <p class="blog__category util__text-uppercase">{categories.0}</p>
    <h3 class="util__text-red" data-content-field="title">{title}</h3>
    {excerpt}
  </a>

{.or}

  {#  No items means no blog posts  }
  <p><em>No testimonials yet.</em></p>

{.end}