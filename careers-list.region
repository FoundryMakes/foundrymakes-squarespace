<!doctype html>
<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  {#  Include system scripts, page meta, and header code injection  }
  {squarespace-headers}

</head>

<body id="{squarespace.page-id}" class="{squarespace.page-classes}">

  <div class="site-container">

    {#  Navbar  }
    <header>
      {@|apply menu.block}
      {@|apply navbar.block}
    </header>

    <main role="main" data-content-field="main-content">

      {#  Hero image  }
      <div class="hero__image">
        <div class="util__z-above-overlay text-container ">
          <squarespace:block-field id="careers__hero-title" class="page__title util__text-white util__text-uppercase" columns="12" lock-layout="true"/>
          <squarespace:block-field id="careers__hero-header" class="util__text-red" columns="12" lock-layout="true"/>
          <squarespace:block-field id="careers__hero-description" class="util__text-white" columns="12" lock-layout="true"/>
        </div>
        <img src="/assets/images/foundry__pattern-large.svg">
      </div>

      {.section collection}

        <div class="careers__list">

        {.repeated section collections}

        <div class="careers__item">
          <h2 class="util__text-red">{title}</h2>
          <h3>{description}</h3>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17.16 31.41" class="careers__arrow">
            <title>Right Arrow</title>
            <path fill="#000" d="M1.46 0L0 1.46l14.25 14.25L0 29.96l1.46 1.45 15.7-15.7L1.46 0z" class="arrow"></path>
          </svg>
          <a href="{fullUrl}" class="util__background-link"></a>
        </div>
        
        {.or}
        
        <h2 class="careers__none">We currently have no open positions. Check back later for open opportunities.</h2>

        {.end}

        </div>

      {.end}

      {#  Footer  }
      <footer>
        {@|apply footer.block}
      </footer>

  </div>

  {#  Combo and minify scripts when not logged in  }
  <squarespace:script src="lib/headroom.min.js" combo="true" />
  <squarespace:script src="lib/scrollreveal.min.js" combo="true" />
  <squarespace:script src="globalScripts.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

  {#  Other Squarespace scripts, and footer code injection  }
  {squarespace-footers}

</body>
</html>
