<div class="projects__detail">
  {.section item}
    {#  Post header  }
    <div class="projects__header scroll-reveal">
      <h1 class="projects__title">{title}</h1>
      <h4 class="projects__category">
        {.repeated section categories}
          <a href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
        {.end}
      </h4>
      <h3>{excerpt}</h3>
    </div>
    
    <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

      {#  Post content  }
      <div class="projects__body">
        {body}
      </div>

      {#  Injected code  }
      {postItemInjectCode}

    </article>

  {.end}

  <!--PAGINATION-->
  {.section pagination}
    {.if nextItem}
      <a href="{nextItem.fullUrl}">
        <nav class="projects__pagination scroll-reveal">
          <strong>Next Project</strong>
          <h3>{nextItem.title}</h3>
          {nextItem.excerpt}
          </div>
        </nav>
      </a>
    {.end}
  {.end}
</div>